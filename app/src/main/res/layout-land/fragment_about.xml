<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfaces.Login"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/gray"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_about_logo"
        android:src="@drawable/logo"
        android:background="@color/white"
        android:layout_weight="1"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_weight="2"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/lbl_about_message"
            android:text="@string/about_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/lbl_about_dev_team"
            android:layout_below="@id/lbl_about_message"
            android:layout_centerHorizontal="true"
            android:text="@string/dev_team" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_about_dev_1"
            android:layout_below="@id/lbl_about_dev_team"
            android:layout_centerHorizontal="true"
            android:text="@string/dev_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_about_dev_2"
            android:layout_below="@id/lbl_about_dev_1"
            android:layout_centerHorizontal="true"
            android:text="@string/dev_2" />

    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>